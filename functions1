#include <iostream>
#include <string>
#include <array>
#include <algorithm>
#include <time.h>
#include <math.h>
#include <cmath>

using namespace std;
string greetings(int time) {
	if (time < 12 && time >= 0) {
		return "Good Morning";
	}
	else if (time >= 12 && time < 18) {
		return "Good Afternoon";
	}
	else if (time >= 18 && time < 22) {
		return "Good Evening";
	}
	else if (time >= 22 && time <= 24 || time == 0) {
		return "Good Night";
	}
	else {
		return "Invalid";
	}
}
int main()
{
	int time;
	cout << "Input the time based on the 24-Hour format(0-24)" << endl;
	cin >> time;
	cout << greetings(time) << endl;
  return 0;
}
