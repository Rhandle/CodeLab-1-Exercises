#include <iostream>
using namespace std;
int main()
{
	//Exercise 4, Slide 27
	cout << "Enter the number of sides this shape has. It cannot be more than 10." << endl;
	int sides;
	cin >> sides;
	string shape;
	if (sides == 3) {
		shape = "Triangle";
	}
	else if (sides == 4) {
		shape = "Quadrilateral";
	}
	else if (sides == 5) {
		shape = "Pentagon";
	}
	else if (sides == 6) {
		shape = "Hexagon";
	}
	else if (sides == 7) {
		shape = "Heptagon";
	}
	else if (sides == 8) {
		shape = "Octagon";
	}
	else if (sides == 9) {
		shape = "Nonagon";
	}
	else if (sides == 10) {
		shape = "Decagon";
	}
	else {
		shape = "Invalid";
	}
	cout << "This shape is a: " << shape << endl;
	cin.get();
	return 0;
}
