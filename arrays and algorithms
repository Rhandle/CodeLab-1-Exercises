#include <iostream>
#include <string>
#include <array>
#include <algorithm>
#include <time.h>

using namespace std;
void arraylib1() {
	array<string, 4> arr = { "Mars bar", "Snickers", "Bounty", "Wispa" };

	cout << arr.at(1) << endl;
	cout << arr[1] << endl;

	cout << arr.front() << endl;
	cout << arr.back() << endl;

	for (int i{ 0 }; i < arr.size(); i++) {
		cout << arr.at(i) << ", ";

	}

	cout << endl;
}
void arraylib2() {
		array<int, 5> numbers = { 33, 5, 7, 99, 83 };
		sort(numbers.begin(), numbers.end());
		for (int num : numbers)
		{
			cout << num << " ";
		}
}
void arraylib3() {
	array<int, 5> numbers = { 33, 5, 7, 99, 83 };
	reverse(numbers.begin(), numbers.end());
	for (int num : numbers)
	{
		cout << num << " ";
	}
}
void arraylib4() {
	int randomArray[1000];
	int j = 0;
	srand(time(0));
	for (int x = 0; x < 1000; x++) {
		randomArray[x] = rand() % 100;
		if (randomArray[x] == 6) {
			cout << randomArray[x] << endl;
			j++;
		}
		else {
			continue;
		}
	}
	cout << "Amount of 6's: " << j;
}
void arraylib5() {
	array<int, 10> randomArray;
	srand(time(0));
	cout << "Enter 10 random numbers" << endl;
	for (int x = 0; x < randomArray.size(); x++) {
		cin >> randomArray[x];
		if (randomArray[0] < randomArray[x]) {
			randomArray[0] = randomArray[x];
		}
		else {
			continue;
		}
	}
	cout << "Largest Number: " << randomArray[0] << endl;
}
int main()
{
	arraylib5();
	return 0;
}
